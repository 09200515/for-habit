<%= render "shared/header" %>

<h2>記録を編集する</h2>

<%= form_with model: @record, url: objective_record_path, local: true do |f| %>

  <div class="field">
    <%= f.label :date %><br />
    <div class='input-birth-wrap'>
      <%= raw sprintf(f.date_select(:date, class:'select-birth', id:"birth-date", use_month_numbers: true, prompt:'--', start_year: (Time.now.year - 1), end_year: (Time.now.year), date_separator: '%s'), "年", "月") + "日" %>
    </div>
  </div>

  <div class="field">
    <%= f.label :data, "行った時間" %><br />
    <%= f.text_field :data %>
  </div>

  <div class="field">
    <%= f.label :unit_id, "単位" %><br />
    <%= f.collection_select(:unit_id, Unit.all, :id, :name, {}, {class:"select-box", id:"unit-select"}) %>
  </div>

  <div class="field">
    <%= f.label :inpression, "本文" %><br />
    <%= f.text_field :inpression %>
  </div>

  <div class="actions">
    <%= f.submit "更新する",  data: { confirm: 'こうしんしました！' } %>
  </div>
<% end %>