<%= render "shared/header" %>

<h2>計測する</h2>

<%= link_to '今から計測する', time_objective_records_path, class:'timer-btn' %>

<%= form_with model: @record, url: objective_records_path, local: true do |f| %>

  <div class="field">
    <%= f.label :date %><br />
    <div class='input-birth-wrap'>
      <%= raw sprintf(f.date_select(:date, class:'select-birth', id:"birth-date", use_month_numbers: true, prompt:'--', start_year: 2018, end_year: (Time.now.year), date_separator: '%s'), "年", "月") + "日" %>
    </div>
  </div>

  <div class="field">
    <%= f.label :data, "行った時間" %><br />
    <%= f.text_field :data %>
  </div>

  <div class="field">
    <%= f.label :unit, "単位" %><br />
    <%= f.text_field :unit %>
  </div>

  <div class="field">
    <%= f.label :inpression, "本文" %><br />
    <%= f.text_field :inpression %>
  </div>

  <div class="actions">
    <%= f.submit "記録する" %>
  </div>
<% end %>