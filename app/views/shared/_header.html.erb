<header class='header'>
  <div class="app-title">
    <div class="title-name">
      for<span class="title">Habit</span>
    </div>
  </div>
  <div class='nav'>
    <ul class='lists-right'>
      <% if user_signed_in? %>
        <li><%= link_to 'マイページ', user_path(current_user.id), class: "list" %></li>
        <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "list" %></li>
      <% else %>
        <li><%= link_to 'ログイン', new_user_session_path, class: 'list' %></li>
        <li><%= link_to '新規登録', new_user_registration_path, class: 'list' %>
      <% end %>
    </ul>
  </div>
</header>

