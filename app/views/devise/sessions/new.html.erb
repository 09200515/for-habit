<div class="footer-position">
  <%= render "shared/header"%>
  <%= form_with model: @user, url: user_session_path, class:'registration-main', local: true do |f| %>
    <div class='form-wrap'>
      <div class="error_messages">
        <%= flash[:notice] %>
        <%= flash[:alert] %>
      </div>
      <div class='form-header'>
        <h1 class='form-header-text'>Habit会員ログイン</h1>
      </div>
      <div class='form-group'>
        <%= f.label :email, "e-mail:" %>
        <%= f.email_field :email, class:'input-default', id:'email', placeholder:"登録したメールアドレス", size: 30, autofocus: true %>
      </div>
      <div class='form-group'>
        <%= f.label :password, "Password:" %>
        <%= f.password_field :password, class:'input-default', id:'password', size: 30, placeholder:"パスワード" %>
      </div>
      <div class='login-btn'>
        <%= f.submit "ログイン", class:'login-red-btn' %>
      </div>
      <div class="links">
        <%= link_to "新規登録", new_user_registration_path %>
      </div>
    </div>
  <% end %>
  <%= render  "shared/footer" %>
</div>
