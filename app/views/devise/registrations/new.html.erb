<div class="footer-position">
  <%= render "shared/header" %>
  <%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
    <div class='form-wrap'>
      <div class='form-header'>
        <h1 class='form-header-text'>会員情報入力</h1>
      </div>
      <%= render 'shared/error_messages', model: f.object %>
      <div class="form-group">
        <div class='form-text-wrap'>
          <%= f.label :nickname, "ニックネーム", class: 'form-text' %>
          <span class='indispensable'>必須</span>
        </div>
        <%= f.text_field :nickname, class:"input-default", id:"user_nickname", placeholder:"20文字以内で入力してください", size: 30, maxlength:"20" %>
      </div>

      <div class='form-group'>
          <div class='form-text-wrap'>
            <%= f.label :email, "メールアドレス", class: 'form-text' %>
            <span class='indispensable'>必須</span>
          </div>
        <%= f.email_field :email, class:"input-default", id:"user_email", placeholder:"PC・携帯どちらでも可", size: 40, autofocus: true %>
      </div>

      <div class='form-group'>
        <div class='form-text-wrap'>
          <%= f.label :password, "パスワード", class: 'form-text' %>
          <span class='indispensable'>必須</span>
        </div>
        <%= f.password_field :password, class:"input-default", id:"user_password", size: 40, placeholder:"６文字以上の半角英数字" %>
        <p class="info-text">※英字と数字の両方を含めて設定してください</p>
      </div>

      <div class='form-group'>
        <div class='form-text-wrap'>
          <%= f.label :password_confirmation, "パスワード（確認）", class: 'form-text'%>
          <span class='indispensable'>必須</span>
        </div>
        <%= f.password_field :password_confirmation, class:"input-default", id:"user_password_confirmation", size: 40, placeholder:"同じパスワードを入力してください" %>
      </div>

      <div class='register-btn'>
        <%= f.submit "会員登録", class:"register-red-btn" %>
      </div>
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
  <%= render "shared/footer" %>
</div>